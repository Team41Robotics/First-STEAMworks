#ifndef SRC_DRIVING_H_
#define SRC_DRIVING_H_
#include "WPILib.h"
#include "WPILib_auxiliary.h"
#define DRIVING_ENABLE
class Driving
{
private:

	CANTalon *M_fr;                  //declarations for the talons (motor controllers)
	CANTalon *M_fl;
	CANTalon *M_br;
	CANTalon *M_bl;


public:

	Talon * lightTalon;                    //declares the light talon



	Driving();                             //declares the functions in this class
	void lightOn(double);
	void getBright();
	void lightOff();
	void Move(double rightSpeed, double leftSpeed);
	void Manual_Driving(Pneumatics pneumatic, Joystick *leftJoy,Joystick *rightJoy, Joystick *controller);
};




#endif /* SRC_DRIVING_H_ */
