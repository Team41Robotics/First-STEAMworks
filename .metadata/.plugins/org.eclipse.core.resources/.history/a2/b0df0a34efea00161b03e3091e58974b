#ifndef SRC_DRIVING_H_
#define SRC_DRIVING_H_
#include "WPILib.h"
#include "WPILib_auxiliary.h"
#define DRIVING_ENABLE
class Driving
{
private:

	CANTalon *M_fr;                  //declarations for the talons (motor controllers)
	CANTalon *M_fl;
	CANTalon *M_br;
	CANTalon *M_bl;

	double throt;
	double throt_min;
	double throt_rng;

	double con_x;
	double con_y;
	double con_t;




	double absD(double a);

public:

